{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "description": "Boilerplate API",
  "author": "Clevertech <support@clevertech.biz>",
  "main": "src/index.js",
  "scripts": {
    "start": "bnr start",
    "start-dev": "bnr start-dev",
    "knex": "bnr knex",
    "test": "bnr test",
    "test:watch": "bnr test --watch",
    "test:coverage": "bnr test --coverage",
    "test:integration": "bnr test:integration",
    "pretest": "false | cp -i .env.example .env || true"
  },
  "betterScripts": {
    "start": "knex migrate:latest && node src/index.js",
    "start-dev": "node src/wait-for-db.js && knex migrate:latest && nodemon --inspect=0.0.0.0:9229",
    "knex": "knex",
    "test": {
      "command": "jest --forceExit --detectOpenHandles",
      "env": {
        "DB_POOL_MIN": "0",
        "PORT": "0"
      }
    },
    "test:integration": {
      "command": "jest --forceExit --detectOpenHandles",
      "env": {
        "DB_POOL_MIN": "0",
        "TEST_INTEGRATION": "true"
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config",
      "<rootDir>/test/jest.config.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ]
  },
  "dependencies": {
    "@clevertech.biz/auth-core": "0.1.5",
    "body-parser": "1.18.3",
    "connect-redis": "3.4.0",
    "cors": "2.8.5",
    "dotenv": "6.2.0",
    "express": "4.16.4",
    "express-session": "1.15.6",
    "helmet": "3.15.0",
    "jsonwebtoken": "8.4.0",
    "knex": "0.16.3",
    "node-fetch": "2.3.0",
    "pg": "7.8.0",
    "raven": "2.6.4",
    "useragent": "2.3.0",
    "winston": "3.1.0"
  },
  "devDependencies": {
    "better-npm-run": "0.1.1",
    "cpy-cli": "2.0.0",
    "jest": "24.0.0",
    "nock": "^10.0.6",
    "nodemon": "1.18.9",
    "sinon": "^7.2.3"
  }
}
