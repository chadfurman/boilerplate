{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "description": "Boilerplate API",
  "author": "Clevertech <support@clevertech.biz>",
  "main": "src/index.js",
  "scripts": {
    "start": "bnr start",
    "start-dev": "bnr start-dev",
    "knex": "bnr knex",
    "test": "bnr test",
    "test:integration": "bnr test:integration",
    "pretest": "false | cp -i .env.example .env || true"
  },
  "betterScripts": {
    "start": "node src/index.js",
    "start-dev": "node src/wait-for-db.js && sqitch deploy && nodemon --inspect=0.0.0.0:9229",
    "sqitch": "../sqitch/sqitch",
    "test": {
      "command": "jest",
      "env": {
        "DB_POOL_MIN": "0",
        "PORT": "0"
      }
    },
    "test:integration": {
      "command": "jest",
      "env": {
        "DB_POOL_MIN": "0",
        "TEST_INTEGRATION": "true"
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ]
  },
  "dependencies": {
    "cors": "2.8.4",
    "dotenv": "4.0.0",
    "express": "4.13.3",
    "helmet": "3.9.0",
    "jsonwebtoken": "8.1.0",
    "node-fetch": "1.7.3",
    "pg": "7.3.0",
    "postgraphile": "4.2.0",
    "raven": "2.2.1",
    "winston": "3.1.0"
  },
  "devDependencies": {
    "better-npm-run": "0.1.0",
    "cpy-cli": "1.0.1",
    "jest": "21.2.1",
    "nodemon": "1.12.1"
  }
}
